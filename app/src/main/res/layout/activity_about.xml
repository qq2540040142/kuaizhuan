<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/btu_aboutimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">
        <ImageView
            android:id="@+id/image_about"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btu_abouttext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btu_aboutimage"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/text_abouttext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/APPname"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/btu_abouttext1">
        <TextView
            android:id="@+id/text_abouttext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/version"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_aboutbanquan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="由Y S L独立制作"
        android:textColor="@color/about_bottomtext"
        android:gravity="center"
        android:layout_above="@+id/text_aboutbanquan2" />
    <TextView
        android:id="@+id/text_aboutbanquan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Rights reserved"
        android:textColor="@color/about_bottomtext"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>